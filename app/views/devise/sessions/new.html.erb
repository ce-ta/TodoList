<head>
    <%= stylesheet_link_tag '/assets/sign_in.css', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<div class="links">
  <%= link_to "パスワードを忘れた", new_password_path(resource_name) if devise_mapping.recoverable? %><br />
  <%= link_to "アカウントを作成する", new_registration_path(resource_name) if devise_mapping.registerable? %><br />
</div>
